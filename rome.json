{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"files": {
		"ignore": [
			"dist", "coverage", "build", "tmp", "node_modules", "libs/generated/**",
			"apps/server/server/**"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noUnusedVariables": "error"
			},
			"recommended": true,
			"suspicious": {
				"noArrayIndexKey": "warn",
				"noExplicitAny": "warn"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	}
}
