{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"files": {
		"ignore": [
			".next", "dist", "coverage", "build", "tmp", "node_modules", ".solid",
			"libs/generated/**", "**/.react-email/**", "apps/app/server/**"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noUnusedVariables": "error"
			},
			"recommended": true,
			"suspicious": {
				"noArrayIndexKey": "warn",
				"noExplicitAny": "warn"
			}
		}
	}
}
